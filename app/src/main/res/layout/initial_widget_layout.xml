<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/relativeLayout_layout_margin"
    android:background="@color/transparent_red"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appRefreshName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/widget_name"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/appName_tv_textSize" />

    <TextView
        android:id="@+id/refreshWidget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@+id/appRefreshName_tv"
        android:layout_margin="@dimen/refreshWidget_tv_layout_margin"
        android:maxLines="2"
        android:textColor="@color/white"
        android:text="@string/widget_error_tv_title"
        android:textSize="@dimen/refreshWidget_tv_textSize" />

</RelativeLayout>